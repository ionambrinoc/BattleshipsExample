@using Battleships.Core.Models
@model IEnumerable<PlayerRecord>

@{
    ViewBag.Title = "My Players";
}

@Styles.Render("~/bundles/styles/manageplayers")

<br/>
<table class=" table table-striped" id="playerTable">
    <tr>
        <th>Player Name</th>
        <th>Last Updated</th>
        <th></th>
    </tr>
    @foreach (var player in Model) {
        <tr>
            <td>@player.Name</td>
            <td>@player.LastUpdated</td>
            <td class="td-align">
                @using (Html.BeginForm(MVC.ManagePlayers.ClickPlayer(), FormMethod.Post))
                {
                    @Html.Hidden("playerId", player.Id)
                    <input class="btn" id="submit" type="submit" value="Profile" />
                }
            </td>
            <td class ="td-align">
                @using (Html.BeginForm(MVC.ManagePlayers.DeletePlayer(), FormMethod.Post)) {
                    @Html.Hidden("playerId", player.Id)
                    <input class="btn" id="submit" type="submit" value="Delete" />
                }
            </td>
        </tr>
    }
</table>