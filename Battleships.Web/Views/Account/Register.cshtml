@using Battleships.Web.Models.Account
@model CreateAccountViewModel

<script src="@Url.Content("~/Components/Microsoft.jQuery.Unobtrusive.Validation/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Components/Microsoft.jQuery.Unobtrusive.Validation/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm(MVC.Account.Register(), FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div>@Html.ValidationMessageFor(m => m.SqlError)</div>
    <br />
    <div class="form-group">
        <label for="Name">Username: </label>
        <input id="Name" name="name" class="form-control" type="text" placeholder="" />
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        <label for="Password">Password: </label>
        <input id="Password" name="password" class="form-control" type="password" placeholder="" />
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Confirm password: </label>
        <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" placeholder="" />
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    <input class="btn" id="submit" type="submit" value="Submit" />
}

<style type="text/css">
    .field-validation-error { color: red; }

    .validation-summary-errors { color: Red; }
</style>