@using System.Configuration
@using Battleships.Runner.Models
@model IEnumerable<Kitten>

@Styles.Render("~/bundles/styles/kittens/index")

@{
    ViewBag.Title = "Kittens";
}

<h3>Add a kitten</h3>

@using (Html.BeginForm(MVC.Kittens.Index(), FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div class="form-group">
        <label for="kittenName">Name: </label>
        <input id="kittenName" name="kittenName" class="form-control" type="text" placeholder="Strumpf" />
    </div>
    <div class="form-group">
        <label for="kittenFile">Image: </label>
        <input type="file" id="kittenFile" name="kittenFile" class="form-control" />
    </div>
    <input class="btn" id="submit" type="submit" value="Add Kitten" />
}

<h3>List of kittens</h3>

<div class="container">
    <div class="row">
        @foreach (var kitten in Model) {
            <div class="kitten col-md-2">
                <div>@kitten.Name</div>
                @if (!String.IsNullOrEmpty(kitten.FileName)) {
                    <div><img src="@Path.Combine("/", ConfigurationManager.AppSettings["PlayerStoreDirectory"], kitten.FileName)" height="100" /></div>
                }
            </div>
        }
    </div>
</div>