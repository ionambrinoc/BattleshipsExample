@using Battleships.Runner.Models
@model IEnumerable<MatchResult>

@Styles.Render("~/bundles/styles/history/index")

<div class="everything">
    <div></div>
    @{
        ViewBag.Title = "Recent Games Log";
    }



    <table class="table table-striped table-bordered">
        <thead class="tableHeader">
            <tr>
                <th>First Player</th>
                <th>Second Player</th>
                <th>Result</th>
                <th>Time Played</th>
            </tr>
        </thead>


        @foreach (var pastGame in Model) {
            <tr class="tableContent">
                <td>@pastGame.Winner</td>
                <td>@pastGame.Loser</td>
                <td>@pastGame.Winner wins!</td>
                <td>@pastGame.TimePlayed</td>
            </tr>
        }
    </table>

</div>