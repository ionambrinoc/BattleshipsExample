@using Battleships.Runner.Models
@model IEnumerable<GameResult>

@Styles.Render("~/bundles/styles/history/index")

@{
    ViewBag.Title = "Recent Games Log";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Winner</th>
            <th>Loser</th>
            <th>Time Played</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var pastGame in Model) {
            <tr class="tableContent">
                <td>@pastGame.Winner.Name</td>
                <td>@pastGame.Loser.Name</td>
                <td>@pastGame.TimePlayed</td>
            </tr>
        }
    </tbody>
</table>