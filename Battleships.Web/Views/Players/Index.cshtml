@using Battleships.Runner.Models
@model IEnumerable<Player>

@{
    ViewBag.Title = "Players";
}


<h3>Current challenge</h3>
<table width ="300">
    <tr >
        <td id="firstPlayer" class="text-center" height ="30">First player</td>
        <td class="text-center" height ="30"> VS</td>
        <td id="secondPlayer" class="text-center" height="30">Second player</td>
    </tr>
    <tr>
        <td class="text-center">
            <button type="button" class="btn btn-default" onclick=" DeleteFirstPlayer() ">
                Delete first!
            </button>
        </td>
        <td id="play" class="text-center">
            <button type="button" class="btn btn-default" >
                Play!
            </button>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-default" onclick=" DeleteSecondPlayer() ">
                Delete second!
            </button>
        </td>
    </tr>
</table>

<h3>List of players</h3>

<table class ="table table-striped">
    <tr>
        <th>User Name</th>
        <th>Player Name</th>
        <th width="12%" class="text-center">Challenge!</th>
    </tr>
    @foreach (var player in Model.Reverse()) {
        <tr>
            <td>@player.UserName</td>
            <td>@player.Name</td>
            <td width="12%">
                <button type="button" class="btn btn-default" onclick=" AddToGame(@player.Id, '@player.Name') ">
                    Add to Game!
                </button>
            </td>
        </tr>
    }
</table>

@section scripts{
    @Scripts.Render("~/bundles/scripts/players/challenge")
    <script type="text/javascript">



    </script>
}