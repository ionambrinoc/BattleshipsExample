@using Battleships.Runner.Models
@model IEnumerable<Player>

@{
    ViewBag.Title = "Players";
}

<h3>Add a player</h3>

@using (Html.BeginForm(MVC.Players.Index(), FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div class="form-group">
        <label for="userName">Username: </label>
        <input id="userName" name="userName" class="form-control" type="text" placeholder="User" />
    </div>
    <div class="form-group">
        <label for="name">Player name: </label>
        <input id="name" name="name" class="form-control" type="text" placeholder="Player"/>
    </div>
    <div class="form-group">
        <label for="file">File: </label>
        <input type="file" id="file" name="file" class="form-control" />
    </div>
    <input class="btn" id="submit" type="submit" value="Add Player"/>
}

<h3>List of players</h3>

<table class ="table table-striped">
    <tr>
        <th>User Name</th>
        <th>Player Name</th>
    </tr>
    @foreach (var player in Model) {
        <tr>
            <td>@player.UserName</td>
            <td>@player.Name</td>
        </tr>
    }
</table>