@{
    ViewBag.Title = "Home Page";
}

<script src="@Url.Content("~/Components/Microsoft.jQuery.Unobtrusive.Validation/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Components/Microsoft.jQuery.Unobtrusive.Validation/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="jumbotron">
    <h1>BATTLESHIPS!</h1>
</div>

<h3>Log in</h3>


@using Battleships.Web.Models.Home
@model LogInViewModel

@using (Html.BeginForm(MVC.Home.LogIn(), FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <div>@Html.ValidationMessageFor(m => m.SqlError)</div>
    <br />
    <div class="form-group">
        <label for="Name">Username: </label>
        <input id="Name" name="Name" class="form-control" type="text" placeholder="" />
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        <label for="Password">Password: </label>
        <input id="Password" name="Password" class="form-control" type="text" placeholder="" />
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <input class="btn" id="submit" type="submit" value="Submit" />
}

<br/>
<h4>Not a user?</h4>

@using (Html.BeginForm(MVC.Home.SignUp(), FormMethod.Post, new { enctype = "multipart/form-data" })) {
    <input class="btn" id="submit" type="submit" value="Sign up" />
}